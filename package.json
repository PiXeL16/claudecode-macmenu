{
  "name": "claudecode-macmenu",
  "version": "0.1.0",
  "description": "Mac menu bar app for Claude Code with notifications and analytics",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "tsc && electron .",
    "build": "tsc",
    "watch": "tsc --watch",
    "package": "electron-builder"
  },
  "keywords": [
    "electron",
    "macos",
    "menubar",
    "claude-code"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {},
  "build": {
    "appId": "com.claudecode.macmenu",
    "productName": "Claude Code Menu",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ]
  }
}
