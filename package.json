{
  "name": "claudecode-macmenu",
  "version": "0.1.0",
  "description": "Mac menu bar app for Claude Code with notifications and analytics",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "tsc && electron .",
    "build": "tsc",
    "watch": "tsc --watch",
    "package": "electron-builder",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "generate-sounds": "node scripts/generate-sounds.js"
  },
  "keywords": [
    "electron",
    "macos",
    "menubar",
    "claude-code"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.claudecode.macmenu",
    "productName": "Claude Code Menu",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "!assets/README.md"
    ]
  }
}
